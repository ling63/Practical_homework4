<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <CheckBox
        android:id="@+id/chk_chocolate_syrup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#E91E63" 
        android:text="@string/chocolate_syrup"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="103dp" />

    <CheckBox
        android:id="@+id/chkSprinkles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sprinkles"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="170dp" />

    <CheckBox
        android:id="@+id/chk_Crushed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crushed nuts"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="235dp" />

    <CheckBox
        android:id="@+id/chk_Cherries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cherries"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="294dp" />

    <CheckBox
        android:id="@+id/chk_Orio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orio cookie crumbles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />


</androidx.constraintlayout.widget.ConstraintLayout>